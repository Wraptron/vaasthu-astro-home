---
const services = [
  { title: "Home Vastu", image: "/Images/house.png" },
  { title: "Commercial Vastu", image: "/Images/worker.png" },
  { title: "Industrial Vastu", image: "/Images/power-plant.png" },
  { title: "Vastu for Existing Space", image: "/Images/location.png" },
  { title: "Astro Vastu", image: "/Images/astrology.png" },
  { title: "Devatha Analysis", image: "/Images/angel.png" },
  { title: "Vastu Designing Services", image: "/Images/graphic-designer.png" },
  { title: "Construction as per Vastu", image: "/Images/construction-worker.png" },
];
---

<section class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 py-16">
  <!-- Section Heading -->
  <h2 class="text-3xl sm:text-4xl lg:text-5xl font-bold text-center mb-12" style="font-family: 'Pacifico', cursive;">
    <span style="color:#0ea5e9;">Our</span>
    <span style="color:#000;">Services</span>
  </h2>

  <!-- Services Grid -->
  <div class="grid gap-8 sm:grid-cols-2 lg:grid-cols-4 text-center">
    {services.map(service => (
      <div class="flex flex-col items-center">
  <!-- Funky Title -->
  <h3 
    class="text-lg sm:text-xl font-bold mb-4"
    style="
      font-family: 'Permanent Marker', cursive; 
      color: #0ea5e9; 
      // text-shadow: 2px 2px #000; 
      transform: rotate(-3deg);
    "
  >
    {service.title}
  </h3>

  <!-- Image -->
  <img 
    src={service.image} 
    alt={service.title} 
    class="w-32 h-32 sm:w-40 sm:h-40 lg:w-48 lg:h-48 object-contain" 
  />
</div>

    ))}
  </div>
</section>
