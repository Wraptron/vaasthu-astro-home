---
const clients = [
  { name: "Soul Garden Bistro", img: "/Images/soulgarden.jpg" },
  
  { name: "JSP", img: "/Images/JSP.png" },
  { name: "SVC Cinemas", img: "/Images/svc.png.webp" },
  { name: "Birthwave Birth Centre", img: "/Images/birthwave.png" },
  { name: "BK Astro", img: "/Images/bkastro.png.webp" },
  { name: "Trinity Builders", img: "/Images/trinity.png.webp" },
 { name: "Kraftzworks Studio", img: "/Images/kw-logo.png" },
  { name: "Jiggys Cafe", img: "/Images/jiggys.jpg" },
];
---
<head>
  <!-- Add script-style fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<section class="py-16 bg-gradient-to-b to-gray-100 relative overflow-hidden">
  <div class="max-w-6xl mx-auto text-center">
    <h1 class="text-4xl md:text-5xl font-semibold text-gray-900 mb-8">
      <span style="font-family: 'Dancing Script', cursive; font-weight: 600;">
        <span style="color:#0097b2;">Our Corporate 
</span>
        <span style="color:#000;">clients</span>
      </span>
    </h1>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8">
      {clients.map((client) => (
        <div
          class="group rounded-2xl shadow-md p-6 flex items-center justify-center border border-gray-200/50 transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:border-primary/60 hover:-translate-y-3"
        >
          <div
            class={`w-full h-32 flex items-center justify-center p-2 rounded-lg ${
              client.name === "JSP" || client.name === "Birthwave Birth Centre"
                ? "bg-gray-800"
                : ""
            }`}
          >
            <img
              src={client.img}
              alt={client.name}
              class="h-full w-auto object-contain transition duration-500"
            />
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
