---
const clients = [
  { name: "Kraftzworks Studio", img: "/Images/kw-logo.png" },
  { name: "JSP", img: "/Images/JSP.png" },
  { name: "SVC Cinemas", img: "/Images/svc.png.webp" },
  { name: "Birthwave Birth Centre", img: "/Images/birthwave.png" },
  { name: "BK Astro", img: "/Images/bkastro.png.webp" },
  { name: "Trinity Builders", img: "/Images/trinity.png.webp" },
  { name: "Soul Garden Bistro", img: "/Images/soulgarden.jpg" },
  { name: "Jiggys Cafe", img: "/Images/jiggys.jpg" },
];
---

<section class="py-16 bg-gradient-to-b from-gray-50 via-white to-gray-100 relative overflow-hidden">
  <div class="max-w-6xl mx-auto text-center">
    <h2 class="text-3xl md:text-4xl font-extrabold text-gray-800 mb-14 tracking-tight">
      Our Corporate Clients
    </h2>

    <div class="grid grid-cols-2 sm:grid-cols-3 md:grid-cols-4 gap-8">
      {clients.map((client) => (
        <div
          class="group bg-white/70 backdrop-blur-md rounded-2xl shadow-md p-6 flex flex-col items-center justify-center border border-gray-200/50 transition-all duration-500 hover:scale-105 hover:shadow-2xl hover:border-primary/60 hover:-translate-y-3"
        >
          <div class="relative w-24 h-24 flex items-center justify-center rounded-full bg-gradient-to-tr from-[#DFF4F5] via-[#5A8F91] to-[#114c52] shadow-inner mb-4 group-hover:animate-pulse">
            <img
              src={client.img}
              alt={client.name}
              class="h-16 object-contain grayscale group-hover:grayscale-0 transition duration-500"
            />
          </div>
          <p class="text-sm font-semibold text-gray-800 group-hover:text-primary transition">
            {client.name}
          </p>
        </div>
      ))}
    </div>
  </div>
</section>
