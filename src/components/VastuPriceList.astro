---
const priceList = [
  { title: "Apartments below 1000 sq.ft", price: "INR 9,191/-", actualPrice: "INR 18,000" },
  { title: "Apartments above 1000 sq.ft", price: "INR 9,191/- + INR 15 per additional sq.ft", actualPrice: "INR 24/Sq.ft" },
  { title: "Individual house below 3000 sq.ft", price: "INR 15/Sq.ft", actualPrice: "INR 33/Sq.ft" },
  { title: "Individual house above 3000 sq.ft", price: "INR 15/Sq.ft upto 3000 sq.ft + INR 11/Sq.ft additional area", actualPrice: "" },
  { title: "Individual house above 3000 sq.ft (upto 6000 sq.ft)", price: "INR 15/Sq.ft upto 3000 sq.ft + INR 11/Sq.ft upto 6000 sq.ft + INR 9/Sq.ft above 6000 sq.ft", actualPrice: "" },
  { title: "Designing charges (new property / with architect before construction)", price: "INR 15/Sq.ft", actualPrice: "" },
  { title: "Vastu corrections for commercial properties", price: "INR 15/Sq.ft", actualPrice: "" },
  { title: "Astro Vastu", price: "+ INR 6/Sq.ft on original consultation", actualPrice: "" },
  { title: "Check property Vastu before buying", price: "INR 5,000/- flat", actualPrice: "INR 10,000" },
  { title: "Small budget plans (houses below 500 sq.ft)", price: "INR 3,131/-", actualPrice: "INR 5,000" },
  { title: "Quick Vastu calls for single problem", price: "INR 5,259/-", actualPrice: "INR 10,000" },
];
---
<head>
  <!-- Add script-style fonts -->
  <link href="https://fonts.googleapis.com/css2?family=Dancing+Script:wght@400;500;600;700&display=swap" rel="stylesheet">
</head>
<section class="vastu-section py-20 min-h-screen flex flex-col items-center">
  <div class="max-w-6xl w-full px-4 text-center">
    <!-- Title -->
    <h1 class="text-4xl md:text-5xl font-semibold text-gray-900 mb-8">
      <span style="font-family: 'Dancing Script', cursive; font-weight: 600;">
        <span style="color:#0097b2;">Vastu Consultation 
</span>
        <span style="color:#000;">Price List</span>
      </span>
    </h1>

    <!-- Top Book Consultation Button -->
    <a href="/contactus" 
       style="font-family: 'Pacifico', cursive; font-size: 1.5rem; text-decoration: none; 
              display: inline-block; padding: 0.8rem 2rem; border-radius: 12px; 
              background-color: #e0f2fe; box-shadow: 0 4px 10px rgba(0,0,0,0.15);
              transition: all 0.3s; margin-bottom: 2rem;">
      <span style="color:#0ea5e9;">Book</span> 
      <span style="color:#000;">a Consultation</span>
    </a>

    <!-- Price List Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {priceList.map((item) => (
        <div 
          class="bg-white p-6 rounded-xl shadow-md hover:shadow-lg hover:scale-105 transition-all duration-300 cursor-pointer group"
        >
          <h3 class="text-lg font-semibold text-gray-800 group-hover:text-blue-600 transition-colors duration-300">
            {item.title}
          </h3>
          <p class="font-bold mt-2">{item.price}</p>
          {item.actualPrice && (
            <p class="text-gray-400 text-sm line-through mt-1">
              Actual Price: {item.actualPrice}
            </p>
          )}
        </div>
      ))}
    </div>

    <!-- Note -->
    <p class="text-sm text-gray-600 font-medium mt-8 max-w-3xl mx-auto">
  Kindly note that this price includes only consultation charges and there are no other hidden costs. 
  Materials are to be purchased by the client.
</p>
  </div>
</section>

<style>
.vastu-section {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 80px 20px;
}

@media (max-width: 768px) {
  .vastu-section {
    padding: 60px 15px;
  }
}

@media (max-width: 480px) {
  .vastu-section {
    padding: 40px 10px;
  }
}
</style>






