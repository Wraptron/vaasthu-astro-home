<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Transform Spaces Banner</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Lucida Sans', 'Lucida Sans Regular', 'Lucida Grande', 'Lucida Sans Unicode', Geneva, Verdana, sans-serif
        }

        .banner-section {
            position: relative;
            min-height: 100vh;
            display: flex;
            align-items: center;
            justify-content: center;
            text-align: center;
            overflow: hidden;
        }

        .banner-background {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-size: cover;
            background-position: center;
            background-repeat: no-repeat;
            transition: opacity 1s ease-in-out;
            opacity: 0;
        }

        .banner-background.active {
            opacity: 1;
        }

        .banner-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /* background: linear-gradient(135deg, rgba(212, 184, 150, 0.8) 0%, rgba(201, 168, 118, 0.8) 50%, rgba(184, 149, 106, 0.8) 100%); */
            z-index: 1;
        }

        .banner-content {
            position: relative;
            z-index: 2;
            max-width: 800px;
            padding: 2rem;
            color: white;
        }

        .banner-content h1 {
            font-size: clamp(2.5rem, 8vw, 6rem);
            font-weight: 400;
            line-height: 1.1;
            margin-bottom: 1rem;
            letter-spacing: -0.02em;
        }

        .banner-content .subtitle {
            font-size: clamp(2rem, 6vw, 4.5rem);
            font-weight: 300;
            font-style: italic;
            margin-bottom: 2rem;
            opacity: 0.95;
            letter-spacing: -0.01em;
        }

        .banner-content p {
            font-size: clamp(1rem, 2.5vw, 1.25rem);
            line-height: 1.6;
            margin-bottom: 3rem;
            opacity: 0.9;
            max-width: 600px;
            margin-left: auto;
            margin-right: auto;
        }

        .cta-button {
            display: inline-block;
            padding: 1rem 2.5rem;
            background: white;
            color: #b8956a;
            text-decoration: none;
            border-radius: 50px;
            font-weight: 500;
            font-size: 1.1rem;
        }

        /* Mobile Responsiveness */
        @media (max-width: 768px) {
            .banner-section {
                padding: 1rem;
            }

            .banner-content {
                padding: 1rem;
            }

            .banner-content p {
                margin-bottom: 2rem;
            }

            .cta-button {
                padding: 0.8rem 2rem;
                font-size: 1rem;
            }
        }

        @media (max-width: 480px) {
            .banner-content h1 {
                font-size: 2.2rem;
            }

            .banner-content .subtitle {
                font-size: 1.8rem;
            }
        }

        /* Large Screens */
        @media (min-width: 1440px) {
            .banner-content {
                max-width: 1000px;
            }
        }
    </style>
</head>
<body>
    <section class="banner-section">
        <!-- Background Images -->
        <div class="banner-background active" style="background-image: url('/Images/water.jpg');"></div>
        <div class="banner-background" style="background-image: url('/Images/air.jpg');"></div>
        <div class="banner-background" style="background-image: url('/Images/fire.jpg');"></div>
        <div class="banner-background" style="background-image: url('/Images/sand.jpg');"></div>
        <div class="banner-background" style="background-image: url('/Images/ether.jpg');"></div>

        <!-- Overlay for better text readability -->
        <div class="banner-overlay"></div>

        <div class="banner-content">
            <h1>Transform Spaces</h1>
            <div class="subtitle">Inspire Lives</div>
            <p>Elevate your interior design projects with a sleek, customizable template built to showcase your creative vision. Perfect for modern designers who want to captivate clients and stand out.</p>
            <a href="#" class="cta-button">Book a Consultation</a>
        </div>
    </section>

    <script>
        // Background image carousel
        const backgrounds = document.querySelectorAll('.banner-background');
        let currentIndex = 0;

        function changeBackground() {
            // Remove active class from current background
            backgrounds[currentIndex].classList.remove('active');
            
            // Move to next background
            currentIndex = (currentIndex + 1) % backgrounds.length;
            
            // Add active class to new background
            backgrounds[currentIndex].classList.add('active');
        }

        // Change background every 4 seconds
        setInterval(changeBackground, 4000);
    </script>
</body>
</html>