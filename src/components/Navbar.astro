<!-- Script -->
<script>
  document.addEventListener("DOMContentLoaded", () => {
    const mobileBtn = document.getElementById("mobile-menu-button");
    const menu = document.getElementById("navbar-default");
    const learnVastuToggle = document.getElementById("learn-vastu-toggle");
    const learnVastuDropdown = document.getElementById("learn-vastu-dropdown");
    const navbar = document.getElementById("navbar");

    // Toggle mobile menu
    mobileBtn?.addEventListener("click", () => {
      menu?.classList.toggle("hidden");
    });

    // Learn Vastu dropdown toggle (mobile only)
    learnVastuToggle?.addEventListener("click", (e) => {
      if (window.innerWidth < 1280) {
        e.preventDefault();
        learnVastuDropdown?.classList.toggle("hidden");
      }
    });

    // Scroll shadow effect (navbar always white)
    if (navbar) {
      window.addEventListener("scroll", () => {
        if (window.scrollY > 10) {
          navbar.classList.add("shadow-md");
        } else {
          navbar.classList.remove("shadow-md");
        }
      });
    }
  });
</script>

